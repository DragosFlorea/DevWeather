<Page
    x:Class="DevWeather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">
    <StackPanel Background="HotPink">
        <StackPanel  VerticalAlignment="Center">
            <TextBlock x:Name="txtDisplayTemp" 
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="52"/>
            <TextBlock x:Name="txtDisplayDescrp" 
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="35"/>
            <TextBlock x:Name="txtDisplayLocation" 
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="25"
                   TextWrapping="Wrap"/>
        <Image Name="ResultImage" 
               Width="200" 
               Height="200" 
               HorizontalAlignment="Center"/>
    </StackPanel>
    </StackPanel>
</Page>
